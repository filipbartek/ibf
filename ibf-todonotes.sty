\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{ibf-todonotes}

\RequirePackage[obeyFinal]{todonotes}

\newcommand{\todomaybe}[2][]{\todo[color=pink,#1]{?` #2}}
\newcommand{\todonote}[2][]{\todo[nolist,color=gray,#1]{#2}}

\newcommand{\todoauthorcolor}[4][]
{\todo[author=#2,color=#3,#1]{#4}}

\newcommand{\todokucera}[2][]
{\todoauthorcolor[#1]{\foreignlanguage{czech}{Kučera}}{green}{#2}}

\newcommand{\todocepek}[2][]
{\todoauthorcolor[#1]{\foreignlanguage{czech}{Čepek}}{blue}{#2}}

\newcommand{\todobartek}[2][]
{\todoauthorcolor[#1]{\foreignlanguage{czech}{Bártek}}{yellow}{#2}}

\newcommand{\todoforkucera}[2][]{\todo[color=green,#1]{!` #2}}

